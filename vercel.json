{
  "version": 2,
  "builds": [
    { "src": "api/bot.js", "use": "@vercel/node" },
    { "src": "api/status.js", "use": "@vercel/node" },
    { "src": "public/**/*", "use": "@vercel/static" }
  ],
  "routes": [
    { "src": "/", "dest": "/public/index.html" },
    { "src": "/api/bot", "dest": "/api/bot.js" },
    { "src": "/api/status", "dest": "/api/status.js" },
    { "src": "/(.*)", "dest": "/public/$1" }
  ],
  "env": {
    "NODE_ENV": "production"
  }
}